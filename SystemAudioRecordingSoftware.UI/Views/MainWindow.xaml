<Window
    x:Class="SystemAudioRecordingSoftware.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="800"
    Height="400"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="8"
            VerticalAlignment="Center"
            Command="{Binding RecordCommand}"
            Content="{materialDesign:PackIcon Kind=Record}"
            Style="{StaticResource MaterialDesignIconButton}" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="8"
            VerticalAlignment="Center"
            Command="{Binding PlayCommand}"
            Content="{materialDesign:PackIcon Kind=Play}"
            Style="{StaticResource MaterialDesignIconButton}" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="8"
            VerticalAlignment="Center"
            Command="{Binding StopCommand}"
            Content="{materialDesign:PackIcon Kind=Stop}"
            Style="{StaticResource MaterialDesignIconButton}" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="8"
            VerticalAlignment="Center"
            Command="{Binding SaveCommand}"
            Content="{materialDesign:PackIcon Kind=Floppy}"
            Style="{StaticResource MaterialDesignIconButton}" />

        <ContentPresenter
            Grid.Row="1"
            Grid.ColumnSpan="7"
            Margin="8"
            Content="{Binding Visualization}" />

        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
    </Grid>
</Window>
