<views:MainWindowBase
    x:Class="SystemAudioRecordingSoftware.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:views="clr-namespace:SystemAudioRecordingSoftware.UI.Views"
    xmlns:vms="clr-namespace:SystemAudioRecordingSoftware.UI.ViewModels"
    Width="800"
    Height="400"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            x:Name="RecordButton"
            Grid.Row="0"
            Grid.Column="0"
            Margin="8"
            VerticalAlignment="Center"
            Content="{materialDesign:PackIcon Kind=Record}"
            Style="{StaticResource MaterialDesignIconButton}" />
        <Button
            x:Name="PlayButton"
            Grid.Row="0"
            Grid.Column="1"
            Margin="8"
            VerticalAlignment="Center"
            Content="{materialDesign:PackIcon Kind=Play}"
            Style="{StaticResource MaterialDesignIconButton}" />
        <Button
            x:Name="StopButton"
            Grid.Row="0"
            Grid.Column="2"
            Margin="8"
            VerticalAlignment="Center"
            Content="{materialDesign:PackIcon Kind=Stop}"
            Style="{StaticResource MaterialDesignIconButton}" />
        <Button
            x:Name="SaveButton"
            Grid.Row="0"
            Grid.Column="3"
            Margin="8"
            VerticalAlignment="Center"
            Content="{materialDesign:PackIcon Kind=Floppy}"
            Style="{StaticResource MaterialDesignIconButton}" />

        <ContentPresenter
            x:Name="VisualizationContent"
            Grid.Row="1"
            Grid.ColumnSpan="7"
            Margin="8" />
    </Grid>
</views:MainWindowBase>
